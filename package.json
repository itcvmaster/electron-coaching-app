{
  "name": "blitz-app",
  "type": "module",
  "version": "2.0.0-beta.0",
  "description": "Blitz web application.",
  "private": true,
  "scripts": {
    "postinstall": "npm run build",
    "build": "node build-scripts/build.mjs",
    "build:desktop": "npm run build -- --desktop",
    "postbuild:desktop": "node build-scripts/upload-to-s3.mjs -- --desktop",
    "build:quick": "npm run build -- --quick",
    "dev": "npm run build -- --dev",
    "dev:cn": "npm run build -- --dev --china",
    "dev:reload": "npm run build -- --dev --reload",
    "dev:ssr": "npm run build:quick && npm run ssr",
    "format": "prettier --write src clutch/src build-scripts server test",
    "lint": "eslint --fix \"src/**\" \"clutch/src/**\" \"build-scripts/**\" \"server/**\" \"test/**\"",
    "test": "npm run lint && npm run build && npm run test:unit && npm run test:integration && npm run test:acceptance",
    "test:quick": "npm run build:quick && npm run test:unit && npm run test:integration",
    "test:unit": "node test/unit.mjs | tap-mocha-reporter dot",
    "test:unit:coverage": "c8 -r lcov npm run test:unit",
    "test:integration": "node test/integration.mjs | tap-mocha-reporter spec",
    "test:integration:coverage": "c8 -r lcov npm run test:integration",
    "test:acceptance": "node test/acceptance.mjs",
    "test:acceptance:coverage": "c8 -r lcov npm run test:acceptance",
    "start": "npm run dev",
    "ssr": "node server/server.mjs",
    "prepare": "husky install"
  },
  "author": "Blitz, Inc.",
  "license": "UNLICENSED",
  "devDependencies": {
    "@aws-sdk/client-s3": "^3.72.0",
    "@aws-sdk/credential-providers": "^3.72.0",
    "@testing-library/dom": "^8.13.0",
    "ansi-colors": "^4.1.1",
    "c8": "^7.11.0",
    "detect-port": "^1.3.0",
    "esbuild": "^0.14.36",
    "eslint": "^8.13.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-blitz": "file:config/eslint",
    "eslint-plugin-i18next": "^5.1.2",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.4.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-valtio": "^0.4.3",
    "git-commit-msg-linter": "^4.1.1",
    "husky": "^7.0.4",
    "i18next-v4-format-converter": "^1.0.3",
    "linkedom": "^0.14.7",
    "lint-staged": "^12.3.8",
    "minify-json": "^1.0.0",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "svgo": "^2.8.0",
    "tap-mocha-reporter": "^5.0.3",
    "tapdance": "^5.1.1"
  },
  "dependencies": {
    "@absinthe/socket": "^0.2.1",
    "@github/time-elements": "^3.1.2",
    "d3-array": "^3.1.6",
    "d3-axis": "^3.0.0",
    "d3-ease": "^3.0.1",
    "d3-scale": "^4.0.2",
    "d3-selection": "^3.0.0",
    "d3-shape": "^3.1.0",
    "d3-transition": "^3.0.1",
    "event-lite": "^0.1.2",
    "goober": "^2.1.8",
    "html-minifier": "^4.0.0",
    "i18next": "^21.6.16",
    "idb-keyval": "^6.1.0",
    "ip2location-nodejs": "^9.1.0",
    "jaro-winkler": "^0.2.8",
    "lottie-web": "^5.9.2",
    "mime-types": "^2.1.35",
    "negotiator": "^0.6.3",
    "node-fetch": "^3.2.3",
    "path-to-regexp": "^6.2.0",
    "phoenix": "^1.6.7",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-i18next": "^11.16.6",
    "s2-engine": "^1.0.6",
    "striptags": "^3.2.0",
    "three": "^0.139.2",
    "valtio": "^1.5.2"
  },
  "optionalDependencies": {
    "@parcel/watcher": "^2.0.5"
  },
  "lint-staged": {
    "*.{mjs,jsx,js}": "eslint --cache --fix",
    "!(package|package-lock).json": "minify-json",
    "*.svg": "svgo"
  },
  "engines": {
